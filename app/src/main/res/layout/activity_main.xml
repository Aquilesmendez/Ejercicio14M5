<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">


    <TextView
        android:text="Bienvenido al Banco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/txtSaldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/txtMonto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el monto"
        android:inputType="numberDecimal"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnVerSaldo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver Saldo"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnIngresarDinero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingresar Dinero"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnSacarDinero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sacar Dinero"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salir" />

</LinearLayout>
